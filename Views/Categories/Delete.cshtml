@model EcommerceApp.Models.Entities.Category

@{
    ViewData["Title"] = "Excluir Categoria";
}

<div class="container mt-4">
    <h1>Excluir Categoria</h1>
    
    <div class="alert alert-danger">
        <h3>Tem certeza que deseja excluir esta categoria?</h3>
        <p>Esta ação não poderá ser desfeita. Todos os produtos associados a esta categoria ficarão sem categoria.</p>
    </div>
    
    <div class="row">
        <div class="col-md-8">
            <dl class="row">
                <dt class="col-sm-3">Nome</dt>
                <dd class="col-sm-9">@Model.Name</dd>
                
                <dt class="col-sm-3">Descrição</dt>
                <dd class="col-sm-9">@Model.Description</dd>
                
                <dt class="col-sm-3">Produtos</dt>
                <dd class="col-sm-9">@(Model.Products?.Count ?? 0)</dd>
                
                <dt class="col-sm-3">Data de Criação</dt>
                <dd class="col-sm-9">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</dd>
            </dl>
            
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Confirmar Exclusão</button>
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </form>
        </div>
    </div>
</div>
